<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReadMe App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
  </head>
  <body>
    <% include ../partials/nav %>
    <main id="main">
      <section class="section">
        <div class="section__subtitle">
          <a href="/events/">Events</a> >> <%= event.name %>
        </div>
        <% if (message) { %>
          <div class="section__message section__message--<%= message.type%>"><%= message.text %></div>
        <% } %>
          <div class="card">
            <div class="card__title">Details:</div>
            <ul class="card__list">

                <% if (event.description) { %>
                  <li>
                      <span class="card__prop">Description:</span>
                      <%= event.description %>
                  </li>
                <% } %>

                <% if (event.location) { %>
                  <li>
                      <span class="card__prop">Location:</span>
                      <%= event.location %>
                  </li>
                <% } %>

                <% if (event.date) { %>
                  <li>
                      <span class="card__prop">Date:</span>
                      <%= event.date %>
                  </li>
                <% } %>

                <% if (event.start_time) { %>
                  <li>
                      <span class="card__prop">Start Time:</span>
                      <%= event.start_time %>
                  </li>
                <% } %>

            </ul>

            <% if (profile != null)  { %>
                <p class="section__text">(You are signed up to attend this event)</p>
            <% } else { %>
              <p class="section__text">(You are not signed up for this event)</p>
            <% } %>
            <div class="card__buttons">
              <a class="card__button card__button--green" href="/events/<%= event.id%>/profiles">See Attendees</a>
              <% if (profile != null)  { %>
                <a class="card__button card__button--yellow" href="/events/<%= event.id%>/profiles/rsvp">Edit Profile / RSVP</a>
              <% } else { %>
                <a class="card__button card__button--blue" href="/events/<%= event.id%>/profiles/rsvp">Attend This Event</a>
              <% } %>
            </div>
          </div>
      </section>
    </main>
  <script src="/shared_scripts.js" charset="utf-8"></script>
  </body>
</html>
