<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReadMe App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
  </head>

  <body>
    <% include ../partials/nav %>

    <main id="main">

      <section class='section section__dashboard'>

          <div class='card card__hero'>

              <div class="card__hero__right">
                <div class="card__hero__right__text"><%=`Hi there, ${user.first}`%></div>
                <div class="card__hero__right__text"><%=`How's the weather in ${user.location} today?`%></div>
              </div>
          </div>
          <div class="card__hero__img" style="background-image: url(<%= `"${user.photo}"` %>)"></div>

              <div class='card card__container'>

                <a href="#events" class='card card__container__small'>
                  <div class="card__container__small__prop">
                    <i class="fas fa-hashtag"></i> <%=`${rsvps}`%>
                  </div>
                  <div class="card__container__small__label">
                    RSVP'd Events
                  </div>
                </a>

                <div class='card card__container__small'>
                  <div class="card__container__small__prop">
                    <i class="fas fa-birthday-cake"></i> <%=`${hosting}`%>
                  </div>
                  <div class="card__container__small__label">
                    Hosting Events
                  </div>
                </div>

                <a href="/connections" class='card card__container__small'>
                  <div class="card__container__small__prop">
                    <i class="fas fa-users"></i> <%=`${connections}`%>
                  </div>
                  <div class="card__container__small__label">
                    Mutual Connections
                  </div>
                </a>

              </div>

      </section>
      <section class="section">
        <a name="events"></a>
        <div class="section__title">Attending Events:</div>
          <% events.forEach(event => { %>
            <div class='card'>
              <div class='card__title'><a href="/events/<%=event.id %>"><%= event.name %></a> - <%= event.date %></div>
                <ul class='card__list'>

                  <% if(event.description) { %>
                    <li>
                      <span class='card__prop'>Description:</span>
                      <%= event.description %>
                    <li>
                  <% } %>

                  <% if(event.location) { %>
                    <li>
                      <span class='card__prop'>location:</span>
                      <%= event.location %>
                    <li>
                  <% } %>

                  <% if(event.date) { %>
                    <li>
                      <span class='card__prop'>Date:</span>
                      <%= event.date %>
                    <li>
                  <% } %>
                </ul>
                <div class="card__buttons">
                    <a class="card__button card__button--green" href="/events/<%=event.id %>">Learn More</a>
                </div>
            </div>
          <% }) %>
      </section>
      <% include ../partials/footer %>
    </main>
    <script src="/shared_scripts.js" charset="utf-8"></script>

  </body>
</html>
