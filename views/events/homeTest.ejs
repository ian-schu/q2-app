<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReadMe App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
  </head>

  <body>
    <% include ../partials/nav %>

    <main id="main">

      <section class='section section__dashboard'>

          <div class='card card__hero'>
              <img class='card__hero__img' src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRqtkpkOpOHA_8z6e1Uw6JemH9gOoV67BbnvLEOysP_429qWU5N' alt='Disrupt Austin Banner Pic'>
              <div class="card__hero__right">
                <div class="card__hero__right__text">User Name</div>
                <div class="card__hero__right__text">More of some text</div>
                <div class="card__hero__right__text">Even more text</div>
                <div class="card__hero__right__text">Fourth line of text</div>
              </div>
          </div>

              <div class='card card__container'>

                <div class='card card__container__small'>
                  <div class='Aligner-item'>
                    <i class="fas fa-hashtag"></i><%=`${users_events.length}`%><br>RSVP'd Events
                  </div>
                </div>

                <div class='card card__container__small'>
                  <div class='Aligner-item'>
                  <i class="fas fa-birthday-cake"></i> <br>Hosted Events.
                  </div>
                </div>

                <div class='card card__container__small'>
                  <div class='Aligner-item'>
                  <i class="fas fa-users"></i><br>Connections.
                  </div>
                </div>

              </div>

      </section>

      <section class="section">
        <div class="section__subtitle">Your Upcoming Events:</div>
        <div class='section_title'> </div>

          <% users_events.forEach(users_event => { %>


            <div class='card'>
              <div class='card__title'><%= `${users_event.name} - ${users_event.date} ` %></div>
                <ul class='card__list'>

                  <% if(users_event.description) { %>
                    <li>
                      <span class='card__prop'>Description:</span>
                      <%= users_event.description %>
                    <li>
                  <% } %>

                  <% if(users_event.location) { %>
                    <li>
                      <span class='card__prop'>location:</span>
                      <%= users_event.location %>
                    <li>
                  <% } %>

                  <% if(users_event.date) { %>
                    <li>
                      <span class='card__prop'>Date:</span>
                      <%= users_event.date %>
                    <li>
                  <% } %>

                  <% if(users_event.start_time) { %>
                    <li>
                      <span class='card__prop'>Starts:</span>
                      <%= users_event.start_time %>
                    <li>
                  <% } %>

                  <% if(users_event.end_time) { %>
                    <li>
                      <span class='card__prop'>Ends:</span>
                      <%= users_event.end_time %>
                    <li>
                  <% } %>
                </ul>
                <br>
                <div class="card__buttons">
                    <a class="card__button card__button--green" href="/events/<%=users_event.event_id %>">Learn More</a>
                </div>

            </div>
          <% }) %>
      </section>
      <% include ../partials/footer %>
    </main>
    <script src="/shared_scripts.js" charset="utf-8"></script>

  </body>
</html>
