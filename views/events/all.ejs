<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReadMe App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <style>
    .card {
      display: flex;
    }
    </style>
  </head>

  <body>
    <% include ../partials/nav %>
    <main id="main">
      <section class="section">
        <div class="section__title">All Events:</div>
        <% if (message) { %>
          <div class="section__message section__message--<%= message.type%>"><%= message.text %></div>
        <% } %>

          <% events.forEach(event => { %>
            <div class='card'>
              <div class='card__title'><a href="/events/<%=event.id %>"><%= event.name %></a> - <%= event.date %></div>
                <ul class='card__list'>

                  <% if(event.description) { %>
                    <li>
                      <span class='card__prop'>Description:</span>
                      <%= event.description %>
                    <li>
                  <% } %>

                  <% if(event.location) { %>
                    <li>
                      <span class='card__prop'>location:</span>
                      <%= event.location %>
                    <li>
                  <% } %>

                  <% if(event.date) { %>
                    <li>
                      <span class='card__prop'>Date:</span>
                      <%= event.date %>
                    <li>
                  <% } %>

                  <% if(event.start_time) { %>
                    <li>
                      <span class='card__prop'>Starts:</span>
                      <%= event.start_time %>
                    <li>
                  <% } %>

                  <% if(event.end_time) { %>
                    <li>
                      <span class='card__prop'>Ends:</span>
                      <%= event.end_time %>
                    <li>
                  <% } %>
                </ul>
                <div class="card__buttons">
                    <a class="card__button card__button--green" href="/events/<%=event.id %>">Learn More</a>
                </div>
            </div>
          <% }) %>
      </section>
    <% include ../partials/footer %>
    </main>
  <script src="/shared_scripts.js" charset="utf-8"></script>
  </body>
</html>
