<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReadMe App</title>
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
  </head>
  <body>
    <header id="header">
      <span id="title">Readme App</span>
      <span id="hamburger-menu"><i class="fas fa-bars"></i></span>
      <nav id="nav" class="nav__hidden">
        <button id="nav__close-button" type="button" name="button">X</button>
        <ul id="nav__ul">
        </ul>
      </nav>
    </header>
    <main id="main">
      <section class="section">
        <div class="section__title">Event: <%= event.name %></div>
        <div class="section__subtitle">Here's who's attending:</div>
        <!-- <p class="section__text">
          We'll use this to check if you have an active session.
        </p> -->
        <% profiles.forEach(profile => { %>
          <% let connectionId = connections.findIndex(conn => conn.user_id_friend == profile.id) %>
          <div class="card">
            <div class="card__title"><%= `${profile.first} ${profile.last[0]}.` %></div>
            <ul class="card__list">

                <% if (profile.questions) { %>
                  <li>
                      <span class="card__prop">Questions:</span>
                      <%= profile.questions %>
                  </li>
                <% } %>

                <% if (profile.topics) { %>
                  <li>
                      <span class="card__prop">Topics:</span>
                      <%= profile.topics %>
                  </li>
                <% } %>

                <% if (profile.job_status) { %>
                  <li>
                      <span class="card__prop">Job Status:</span>
                      <%= profile.job_status %>
                  </li>
                <% } %>

                <% if (profile.noise_level) { %>
                  <li>
                      <span class="card__prop">Noise Level:</span>
                      <%= profile.noise_level %>
                  </li>
                <% } %>

                <% if (profile.where_to_find) { %>
                  <li>
                      <span class="card__prop">Where to find me:</span>
                      <%= profile.where_to_find %>
                  </li>
                <% } %>

                <% if (profile.ask_me) { %>
                  <li>
                      <span class="card__prop">Ask me:</span>
                      <%= profile.ask_me %>
                  </li>
                <% } %>

                <% if (profile.personality) { %>
                  <li>
                      <span class="card__prop">Personality:</span>
                      <%= profile.personality %>
                  </li>
                <% } %>

            </ul>
            <div class="card__buttons">
              <% if (connections[connectionId]) { %>
                <a class="card__button card__button--red" href="/connections/<%= connections[connectionId].id %>?_method=DELETE">Cancel Connection</a>
              <% } else { %>
                <a class="card__button card__button--green" href="/connections/<%= profile.id %>?_method=POST">Ask to Connect</a>
              <% } %>
            </div>
          </div>
        <% }) %>
      </section>
    </main>
    <script src="/shared_scripts.js" charset="utf-8"></script>
  </body>
</html>
